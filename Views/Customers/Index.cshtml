@model IEnumerable<Vidly.Core6.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if(!Model.Any())
{
  <p>We don't have any customer yet.</p>
}
else 
{
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Discount Rate</th>      
      </tr>
    </thead>
    <tbody>
      @foreach(var customer in Model)
      {
        <tr>
          <td>
            <a asp-action='Edit' asp-controller="Customers" asp-route-id="@customer.Id">@customer.Name</a>
          </td>
          <td>@customer.MembershipType?.Name</td>

        </tr>
      }
    </tbody>
  </table>
}

<p>
  <a asp-controller="Customers" asp-action="new">New Customer</a>
</p>
